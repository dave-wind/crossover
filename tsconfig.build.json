{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "module": "esnext",
        "declaration": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "types": ["react", "jest"],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "src/**/*.stories.tsx",
        "src/**/*.test.tsx",
        "src/**/*.example.tsx"
    ]
}
